{
  "compilerOptions": {
    "target": "es2021",
    "module": "Node16",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", ".eslintrc.cjs"],
  "exclude": ["node_modules", "_tests/**/*.ts"],
  "baseUrl": ".",
  "paths": {
    "@": ["/*"],
    "@src": ["src/*"]
  }
}
